<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blogs</title>
    <style>
        .card-img-top {
            width: 50%;
            height: 400px;
            object-fit: cover;
        }
        .comment{
            padding-left: 30px;
        }
    </style>
</head>
<body>
    <%- include('./partials/nav') %>
    <div class="container">
        <h3><%= blog.title %></h3>
        <img src="<%= blog.coverImageUrl %>"  class="card-img-top" alt="Blog Cover Image">
        <pre class="mt-3"><p><%= blog.body %></p></pre>
    </div>
    <div class="container mt-4">
        <img src="<%= blog.createdBy.profileImageUrl  %>" width="100px" alt="">
        <%= blog.createdBy.fullName %>
    </div>
    <div class="container mt-3">
        <h1>Comments (<%= comments.length %>)</h1>
        <% if (locals.user) { %>
         <form action="/blog/comment/<%= blog._id %>" method="POST">
          <div class="mb-3">
            <input type="text" class="form-control" aria-describedby="emailHelp" name="content" placeholder="Enter your comment here">
          </div>
          <button type="submit" class="btn btn-primary">Comment</button>
        </form>
        <% } %>
    </div>

    <div class="mt-3">
        <% comments.forEach(comment => { %>
         <div>
            <img src="<%= comment.createdBy.profileImageUrl  %>" width="100px" alt="">
            <%= comment.createdBy.fullName %>
            <pre class="comment"><%= comment.content %></pre> 
         </div>
        <% }) %>
    </div>
    <%- include('./partials/script') %>
</body>
</html>