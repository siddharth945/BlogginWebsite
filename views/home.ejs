<!DOCTYPE html>
<html lang="en">

<head>
  <title>HomePage</title>
  <%- include('./partials/head') %>
</head>
<style>
  .card-img-top {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
</style>
<body>
  <%- include('./partials/nav') %>

    <div class="container mt-3">
      <div class="row">
        <% blogs.forEach(blog=> { %>
          <div class="col-md-3 mb-4">
            <div class="card h-100" style="width: 100%;">
              <img src="<%= blog.coverImageUrl %>" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">
                  <%= blog.title %>
                </h5>
                <a href="/blog/<%= blog._id %>" class="btn btn-primary">View Blog</a>
              </div>
            </div>
          </div>
          <% }) %>
      </div>
    </div>
    <%- include('./partials/script') %>
</body>

</html>